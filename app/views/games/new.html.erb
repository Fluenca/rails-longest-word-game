<h1>New game</h1>
<% game = "" %>
<br>
<div class="letters">
<% @letters.each do |letter| %>
<%= letter %>
<% game += letter %>
<% end %>
</div>
<p>What is the longest word you can find?</p>
<form action="/score" method="post">
  <input type="text" name="word" placeholder="Your guess...">
   <input id="game" name="game" type="hidden" value=<%= game %> />
  <input type="submit">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
